<AnchorPane prefHeight="650.0" prefWidth="1100.0" style="-fx-background-color: #f2fafc;" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="MyDesktopAppMainDirectory.controller.CalendarController"
            stylesheets="@../style/style.css" styleClass="rootCalendar">

    <FlowPane fx:id="calendar" hgap="10.0" layoutX="192.0" layoutY="116.0" prefHeight="498.0" prefWidth="716.0" vgap="5.0" />
    <HBox alignment="CENTER" layoutX="340.50" layoutY="20.0" prefHeight="44.0" prefWidth="420.0" spacing="5.0">
        <children>
            <Button mnemonicParsing="false" onAction="#backOneMonth" text="&lt;" />
            <Text fx:id="year" strokeType="OUTSIDE" strokeWidth="0.0" text="####">
                <font>
                    <Font size="22.0" />
                </font>
            </Text>
            <Text fx:id="month" strokeType="OUTSIDE" strokeWidth="0.0" text="####">
                <font>
                    <Font size="22.0" />
                </font>
            </Text>
            <Button mnemonicParsing="false" onAction="#forwardOneMonth" text="&gt;" />
        </children>
    </HBox>

    <HBox layoutX="723.50" layoutY="28.0" prefHeight="44.0">
        <DatePicker fx:id="datePick" onAction="#insertingOnPlusClicked" promptText="Enter events date" />
    </HBox>

    <HBox alignment="CENTER" layoutX="189.25" layoutY="78.0" prefHeight="44.0" prefWidth="716.0"
          spacing="81.75">
        <padding>
            <Insets right="9.0"/>
        </padding>
        <Text layoutX="213.0" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Mon" textAlignment="CENTER"/>
        <Text layoutX="222.0" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tue" textAlignment="CENTER"/>
        <Text layoutX="232.0" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Wed" textAlignment="CENTER"/>
        <Text layoutX="241.0" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Thu" textAlignment="CENTER"/>
        <Text layoutX="251.0" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Fri" textAlignment="CENTER"/>
        <Text layoutX="266.0" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sat" textAlignment="CENTER"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sun" textAlignment="CENTER"/>
    </HBox>

    <HBox layoutX="800.0" layoutY="630.0"  prefHeight="50.0" prefWidth="300.0" spacing="15.0" >
        <Button fx:id="showTasks" text="Show tasks for this month" onAction="#showCalendarActivitiesMonth" />
        <Button fx:id="returnButton" text="Return" onAction="#returnButton"/>
    </HBox>

    <HBox layoutX="550.0" layoutY="55.0" prefHeight="44.0">
        <Label fx:id="datesLabel" />
    </HBox>

    <HBox layoutX="25.00" layoutY="25.00">
        <Button fx:id="insertCalendarEvent" text="+" onAction="#insertCalendarEvent" />
    </HBox>

    <HBox layoutX="100.0" layoutY="200.0">
        <Label fx:id="PopupForCalendar" text="This is a popup!" style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: black" visible="false" />
    </HBox>

    <HBox layoutX="45.0" layoutY="23.0" >
        <Label fx:id="warningLabel" text="Choose events date first!" style="-fx-text-fill: #8B0000; -fx-font-size: 16; -fx-font-weight: bold" visible="false"/>
    </HBox>

    <HBox xmlns:fx="http://javafx.com/fxml" layoutY="630.0" layoutX="20.0" spacing="5.0">
        <children>
            <!-- na blok -->
            <Rectangle width="15" height="15" fill="BLUE" stroke="BLUE" strokeWidth="2" />
            <Text text="- Low priority"/>
        </children>
        <children>
            <!-- space between blocks -->
            <Text text="     "/>
            <!-- na blok -->
            <Rectangle width="15" height="15" fill="GREEN" stroke="GREEN" strokeWidth="2" />
            <Text text="- Optional, to do"/>
        </children>
        <children>
            <!-- space between blocks -->
            <Text text="     "/>
            <!-- square -->
            <Rectangle width="15" height="15" fill="DARKRED" stroke="DARKRED" strokeWidth="2" />
            <Text text="- Very important" />
        </children>
    </HBox>
</AnchorPane>